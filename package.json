{
  "name": "@josmardias/npm-boilerplate",
  "version": "0.0.3",
  "description": "A boilerplate for NPM packages",
  "license": "MIT",
  "author": "Josmar Dias",
  "homepage": "https://github.com/josmardias/npm-boilerplate#readme",
  "bugs": {
    "url": "https://github.com/josmardias/npm-boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josmardias/npm-boilerplate.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "babel --ignore \\*-test.js -d dist src",
    "fixpack": "fixpack",
    "lint": "eslint .",
    "lint:fix": "npm run lint --silent -- --fix",
    "prepublish": "publish-please guard",
    "publish-please": "publish-please",
    "test": "mocha --opts scripts/mocha.opts src/**/*-test.js"
  },
  "devDependencies": {
    "babel-cli": "~6.10.1",
    "babel-core": "~6.10.4",
    "babel-eslint": "~6.1.0",
    "babel-polyfill": "~6.9.1",
    "babel-preset-es2015": "~6.9.0",
    "babel-register": "~6.9.0",
    "chai": "~3.5.0",
    "chai-as-promised": "~5.3.0",
    "eslint": "~3.0.0",
    "eslint-config-airbnb-base": "~3.0.1",
    "eslint-plugin-babel": "~3.3.0",
    "eslint-plugin-import": "~1.10.0",
    "eslint-plugin-mocha": "~3.0.0",
    "fixpack": "~2.3.1",
    "mocha": "~2.5.3",
    "mocha-clean": "~1.0.0",
    "publish-please": "~2.1.4"
  }
}
