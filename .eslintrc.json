{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": [
    "babel",
    "jest"
  ],
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "jest/globals": true,
    "node": false,
    "shared-node-browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "complexity": ["warn", 6],
    "indent": ["warn", 2],
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "linebreak-style": ["error", "unix"],
    "no-multi-str": ["off"],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "semi": ["error", "never"]
  }
}
